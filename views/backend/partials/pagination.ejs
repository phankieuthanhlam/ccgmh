<% if (pages > 0) { %>
    <div class="dataTables_paginate paging_simple_numbers">
    <ul class="pagination text-center">
        <% if (current == 1) { %>
            <li class="disabled paginate_button page-item active"><a class="page-link"><i class="fas fa-angle-double-left"></i></a></li>
        <% } else { %>
            <li class="paginate_button page-item active"><a href="<%= current_path %>/?page=1" class="page-link"><i class="fas fa-angle-double-left"></i></a></li>
        <% } %>
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
            <li class="disabled paginate_button page-item"><a class="page-link">...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
                <li class="paginate_button page-item active"><a class="page-link"><%= i %></a></li>
            <% } else { %>
                <li class="paginate_button page-item"><a class="page-link" href="<%= current_path %>?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
                <li class=" paginate_button page-item disabled"><a class="page-link">...</a></li>
            <% } %>
        <% } %>
        <% if (current == pages) { %>
            <li class=" paginate_button page-item disabled"><a class="page-link"><i class="fas fa-angle-double-right"></i></a></li>
        <% } else { %>
            <li class="paginate_button page-item"><a href="<%= current_path %>?page=<%= pages %>" class="page-link"><i class="fas fa-angle-double-right"></i></a></li>
        <% } %>
    </ul>
</div>
<% } %>
