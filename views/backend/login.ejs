<div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed"
    style="background-image: url(backend/assets/media/illustrations/sketchy-1/14.png)">

    <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">

        <a href="/" class="mb-12">
            <img alt="Logo" src="backend/assets/images/logo-web.svg" class="h-90px" />
        </a>

        <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">

            <form class="form w-100" data-form="onLogin" novalidate="novalidate" id="kt_sign_in_form" action="" method="POST">

                <div class="text-center mb-10">

                    <h1 class="text-dark mb-3">
                        <%= title %>
                    </h1>
                    <% if(session_error){ %>
                    <label class="alert bg-danger text-light"><%= session_error %></label>  <% } %>
                </div>

                <div class="fv-row mb-10">

                    <label class="form-label fs-6 fw-bolder text-dark">Tài khoản</label>

                    <input class="form-control form-control-lg form-control-solid" type="text" name="username" value="lamdapchai"
                        autocomplete="off"
                        data-fv-not-empty="true"
                        data-fv-not-empty___message="Tài khoản không để trống"
                        data-fv-string-length="true"
                        />

                </div>

                <div class="fv-row mb-10">

                    <div class="d-flex flex-stack mb-2">

                        <label class="form-label fw-bolder text-dark fs-6 mb-0">Mật khẩu</label>


                    </div>

                    <input class="form-control form-control-lg form-control-solid" type="password" name="password" value="Matkhau12#$"
                        autocomplete="off" data-fv-not-empty="true"
                        data-fv-not-empty___message="Mật khẩu không để trống"
                        data-fv-string-length="true"/>

                </div>

                <div class="text-center">

                    <button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 mb-5" data-kt-indicator>
                        <span class="indicator-label"  >Đăng nhập</span>
                        <span class="indicator-progress">Đang xử lý...<span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                    </button>


                </div>

            </form>

        </div>

    </div>

</div>